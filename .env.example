# Django Settings
# Copy this file to .env and update with your actual values

# SECURITY WARNING: Generate a new secret key for production
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated, e.g., localhost,127.0.0.1,yourdomain.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Format: postgresql://username:password@host:port/database_name
# For SQLite (development): leave blank or use: sqlite:///path/to/db.sqlite3
DATABASE_URL=postgresql://username:password@host:port/database_name

# SMS Provider (mNotify)
MNOTIFY_API_KEY=As6XmFqAhMhB0KRJRKlHYtitS
MNOTIFY_SENDER_ID=Kenn-Site
MNOTIFY_SMS_URL=https://apps.mnotify.net/smsapi

# Reminder defaults
SUBSCRIPTION_REMINDER_DAYS_BEFORE=2
TASK_REMINDER_MINUTES_BEFORE=120

# Celery & Redis Configuration
# Redis URL format: redis://host:port/db_number
# For local development: redis://localhost:6379/0
# For production with password: redis://:password@host:port/db_number
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
